class MembersController < ApplicationController
  def new
  end
 
  def index
   @members = Member.all
  end

  def create
    @member = Member.new(member_params)
    @member.save
    redirect_to @member
  end

  def show
    @member = Member.find(params[:id])
  end

  private
    def member_params
      params.require(:member).permit(:uin, :first_name, :last_name, :email, :department, :designation, :paying)
    end

end
