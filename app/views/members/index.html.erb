<h1>Members</h1>
<div class="top_buttons">
<%= button_to 'Home', welcome_index_path, class: "page_button1", method: :get %>
<%= button_to 'New member', new_member_path, class: "page_button2", method: :get %>
</div>
<div class="members_table">
  <table id="members">
    <tr>
      <th>UIN</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th colspan="3">Actions</th>
    </tr>
 
    <% @members.each do |member| %>
      <tr>
        <td><%= member.uin %></td>
        <td><%= member.last_name %></td>
        <td><%= member.first_name %></td>
        <td class="action_button"><%= button_to 'Show Details', member_path(member), class: "action_button", method: :get %></td>
        <td class="action_button"><%= button_to 'Edit Member', edit_member_path(member), class: "action_button", method: :get %></td>
        <td class="action_button"><%= button_to 'Delete Member', member_path(member), class: "action_button",
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
