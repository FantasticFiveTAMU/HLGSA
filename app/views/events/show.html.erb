  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>
 
<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.time %>
</p>
 
<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
<strong>Invited:</strong>
<table>
  <tr>
    <th>Last Name</th>
    <th>First Name</th>
  </tr>
<% @event.members.each do |member| %>
<tr>
   <td><%= member.last_name %></td>
   <td><%= member.first_name %></td>
</tr>
<%end %>
</table>
</p>

<% if !@event.tracked %>
<%= link_to 'Edit', edit_event_path(@event) %>
|
<% end %>
